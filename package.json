{
  "name": "imba-habit",
  "scripts": {
    "dev": "imba -w index.html",
    "build": "imba build index.html && npm run postbuild",
    "postbuild": "sed -i '' 's/href=\\\"\\//href=\\\"/g' dist/index.html && sed -i '' 's/src=\\\"\\//src=\\\"/g' dist/index.html",
    "preview": "npx vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist"
  },
  "devDependencies": {
    "gh-pages": "^6.0.0",
    "imba": "^2.0.0-alpha.231"
  },
  "dependencies": {
    "express": "^4.18.2",
    "nanoid": "^5.0.2"
  }
}
